
<section class="formElem">
  <%= f.label :bikeid, 'Identification Tag' %>
  <%= f.text_field :bikeid, :for => "bikeid", :placeholder => "\"A1000\"", error: 'Test stuff' %>
</section>
  
<section class="formElem">
  <%= f.label :serialnumber, 'Serial Number' %>
  <%= f.number_field :serialnumber, :step => "1", :placeholder => "\"12345\"", min:1 %>
</section>
  
<section class="formElem">
  <%= f.label :rating, 'User Rating' %>
  <%= f.select :rating, ['Poor', 'Average', 'Good'] %>
</section>

<section class="formElem">
  <%= f.label :condition, 'Current Condition' %>
  <%= f.select :condition, ['Poor', 'Good', 'Excellent'] %>
</section>
  
<section class="formElem">
  <%= f.label :maintenance, 'Last Maintenance' %>
  <%= f.date_field :maintenance, max: Date.today %>
</section>
  
<section class="formElem">
  <%= f.label :style, 'Style (Type)' %>
  <%= f.select :style, ['Mountain', 'Road', 'Touring'] %>
</section>

<section class="formElem">
  <%= f.label :size, 'Size (cm)' %>
  <%= f.number_field :size,min: 30, :placeholder => "\"64\"" %>
</section>

<section class="formElem">
  <%= f.label :color, 'Primary Color' %>
  <%= f.select :color, ['Red', 'Orange', 'Yellow', 'Green', 'Cyan', 'Blue', 'Purple', 'Violet', 'Pink', 'Magenta', 'White', 'Gray', 'Black', 'Brown'] %>
</section>
  
<section class="formElem">
  <%= f.label :availability, 'Availability' %>
  <%= f.select :availability, [['Available', true], ['Not Available', false]] %>
</section>

<section class="formElem">
  <%= f.label :lastcheck, 'Last Check-in' %>
  <%= f.date_field :lastcheck, max: Date.today %>
</section>

<section class="formElem">
  <%= f.label :location, 'Current Location' %>
  <%= f.text_field :location, :placeholder => "\"Stanley Thomas\"", minlength: 4 %>
</section>

<section class="formElem">
  <%= f.label :fare, 'Fare ($)' %>
  <%= f.number_field :fare, :step => '0.01',min: 1, :placeholder => "\"2.50\"" %>
</section>

<section class="formElem">
  <%= f.label :accessories, 'Accessories' %>
  <%= f.text_field :accessories, :placeholder => "\"None\"" %>
</section>

<section class="formElem">
  <%= f.label :picture, 'Picture' %>
  <!--For uploading a file<td>%= f.file_field :picture, accept: 'image/png,image/gif,image/jpeg' %></td>-->
  <%= f.text_field :picture, :placeholder => "\"https://example.com/bike.png\"", minlength: 13 %>
</section>
